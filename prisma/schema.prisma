generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    firstName String
    lastName  String
    email     String   @unique
    role      Role
    password  String
    title     String
    school    String   @default("")
    subject   String   @default("")
    grade     String   @default("")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum Role {
    student
    teacher
    admin
}
