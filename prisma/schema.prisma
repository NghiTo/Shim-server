generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    firstName String
    lastName  String
    email     String   @unique
    avatarUrl String   @default("")
    role      Role
    password  String
    title     String
    schoolId  String?
    subject   String   @default("")
    grade     String   @default("")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    school School? @relation(fields: [schoolId], references: [id])
}

enum Role {
    student
    teacher
    admin
}

model School {
    id      String @id @default(uuid())
    name    String
    address String
    city    String
    country String

    users User[]
}